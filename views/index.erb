<div class="page-header">
  <h1><%= @title %></h1>
</div>

<p>
  <form action="/" method="post">
    <div class="input-group">
      <input type="text" name="content" class="form-control" placeholder="Your note&hellip;">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Take Note!</button>
      </span>
    </div>
  </form>
</p>

<p>
  <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p class="lead">
          <a href="/<%= post.id %>/complete">&#8623;</a>
          <a href="/<%= post.id %>">[edit]</a>
          <% if post.complete %>
            <del><%= h post.content %></del>
          <% else %>
            <%= h post.content %>
          <% end %>
        </p>
        <p>Created: <%= post.created_at %></p>
      </div>
    </div>
  <% end %>
</p>
